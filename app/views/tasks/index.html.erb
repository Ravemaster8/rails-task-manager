<h1>TASKS</h1>
<div>
  <% @tasks.each do |task|  %>
    <p>
      <% if task.completed %>
        <input type="checkbox" name="completed" checked>
      <% else %>
        <input type="checkbox" name="completed">
      <% end %>
      <%= link_to task.title, task_path(task) %>
      
      </p>
  <% end %>
  <p>
    <%= link_to "New Task", new_task_path() %>
  </p>
</div>
